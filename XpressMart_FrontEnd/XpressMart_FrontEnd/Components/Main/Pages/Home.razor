@code{
	private BaseResponse<List<CategoryResponseModel>>? categories;
	private IEnumerable<CategoryResponseModel> firstThree;
	private BaseResponse<ProductListResponseModel> NewProducts { get; set; }
	private BaseResponse<ProductListResponseModel> DealProducts { get; set; }
	private ProductFilter filter = new ProductFilter();
	private bool dataLoaded = false;
	private bool jsInvoked = false;

	protected override async Task OnInitializedAsync()
	{

		categories = await CategoryClient.GetCategoriesAsync();
		firstThree = categories.Data.Take(3);
		await NewArrivals();

	}

	private static string CategoryUrl(int id) => $"/category/{id}";

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		Console.WriteLine($"Data is {dataLoaded} loaded, invoking JS{jsInvoked}");

		if (dataLoaded && !jsInvoked)
		{

			Console.WriteLine("Data is loaded, invoking JS");
			await JSRuntime.InvokeVoidAsync("initializeProductsSlick");
			await JSRuntime.InvokeVoidAsync("initializeProductWidgetSlick");
			await JSRuntime.InvokeVoidAsync("initializeProductMainImgSlick");
			await JSRuntime.InvokeVoidAsync("initializeProductImgsSlick");
			jsInvoked = true;
		}
	}

	private async Task NewArrivals()
	{
		filter.StartDate = DateTime.Now.AddDays(-50);
		filter.EndDate = DateTime.Now;
		filter.Limit = 10;
		var queryString = FilterService.BuildQueryString(filter);
		NewProducts = await ProductClient.GetFilteredProductsAsync(queryString);
		dataLoaded = true;
	}

	private string FormatPrice(decimal price)
	{
		return $"₦{price:N2}";
	}
}
